<article>
  <% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Your Cart</h2>
  <table>
    <tr>
      <td>Quantity</td>
      <td>Title</td>
      <td>Product Price</td>
      <td>Net Item Price</td>
    </tr>
    <%= render(cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="3">Total:</th>
        <td class="price"><%= number_to_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Empty cart', cart,
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
</article>
